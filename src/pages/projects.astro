---
import Layout from '../layouts/Layout.astro';
// 外部JSONファイルをインポート
import projects from '../data/projects.json';
---

<Layout title="最新案件一覧 | SBT">
  <div class="max-w-5xl mx-auto px-6 py-16">
    <div class="mb-12 border-l-4 border-yellow-500 pl-6">
      <h1 class="text-3xl font-bold text-slate-900 tracking-tight">最新案件一覧</h1>
      <p class="text-slate-500 mt-2">エンジニアの市場価値に直結する、透明性の高い案件情報を公開しています。</p>
    </div>

    <div class="grid gap-8">
      {projects.map((p) => (
        <div class="group bg-white border border-slate-200 rounded-2xl p-6 md:p-8 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="px-3 py-1 bg-slate-900 text-white text-[10px] font-bold uppercase tracking-widest rounded-full">
              {p.tag}
            </span>
            <div class="flex gap-2">
              {p.skills.map((skill) => (
                <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-1 rounded">#{skill}</span>
              ))}
            </div>
          </div>

          <h2 class="text-xl md:text-2xl font-bold text-slate-900 mb-6 group-hover:text-yellow-600 transition-colors">
            {p.title}
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6 bg-slate-50 p-5 rounded-xl">
            <div>
              <p class="text-[10px] font-bold text-slate-400 uppercase mb-1">作業単価（税込）</p>
              <p class="text-xl font-black text-red-600">{p.price}<span class="text-sm ml-1 text-slate-500">/月</span></p>
            </div>
            <div>
              <p class="text-[10px] font-bold text-slate-400 uppercase mb-1">作業場所</p>
              <p class="text-sm font-semibold text-slate-700 leading-snug">{p.location}</p>
            </div>
            <div>
              <p class="text-[10px] font-bold text-slate-400 uppercase mb-1">期間</p>
              <p class="text-sm font-semibold text-slate-700">{p.period}</p>
            </div>
          </div>

          <div class="border-t border-slate-100 pt-6">
            <p class="text-sm text-slate-600 leading-relaxed italic">
              <span class="font-bold text-slate-400 not-italic mr-2">DETAILS:</span>{p.summary}
            </p>
          </div>
          
          <div class="mt-8 flex justify-end">
            <a href="/contact" class="inline-flex items-center gap-2 text-sm font-bold text-slate-900 hover:text-yellow-600 transition">
              この案件について詳しく聞く
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>